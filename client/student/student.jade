template(name='student')
	h1 {{currentUser.username}}
	h2 Student
	button#student_logout Logout
	h1 Teachers
	each teachers
		p id {{_id}}
		button#student_teacher_assign Assign
	h1 My Teachers
	each relations
		h2 Teacher
		with myTeacher teacherId
			p {{_id}}
		button#student_teacher_unassign Unassign
		h3 Available at
		each availabilities teacherId
			p Start: {{start}}
			p End: {{end}}
			p Status: {{status}}
			button#student_teacher_reserve(relationId="{{../_id}}") Reserve 
	h1 My Lessons
	each lessons
		h2 Lesson
		p Start: {{start}}
		p End: {{end}}
		p Teacher: {{teacherId}}
		button#student_lesson_cancel Cancel